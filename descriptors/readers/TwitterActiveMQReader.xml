<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <implementationName>org.wso2.uima.collectionProccesingEngine.reader.TwitterActiveMQReader</implementationName>
    <processingResourceMetaData>
        <name>TwitterCollectionReader_Descriptor</name>
        <description>Collection Reader For the Twitter Streaming API</description>
        <version>1.0</version>
        <vendor/>

        <!--- Configuration Paramters to be used are declared here-->
        <configurationParameters>
            <configurationParameter>
                <name>JMSUrL</name>
                <description>URL of the ActiveMQ Broker
                    by default this is "tcp://localhost:61616"
                </description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>

            <configurationParameter>
                <name>topicName</name>
                <description>JMS topic to which the Reader subscribes to</description>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>

        </configurationParameters>

        <!--- Configuration Parameter Values -->
        <configurationParameterSettings>
            <nameValuePair>
                <name>topicName</name>
                <value>
                    <string>Feed</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>JMSUrL</name>
                <value>
                    <string>tcp://localhost:61616</string>
                </value>
            </nameValuePair>
        </configurationParameterSettings>
        <typeSystemDescription>
            <types>
                <typeDescription>
                    <name>org.wso2.uima.types.TimeStamp</name>
                    <description/>
                    <supertypeName>uima.tcas.Annotation</supertypeName>
                    <features>
                        <featureDescription>
                            <name>TimeStamp</name>
                            <description/>
                            <rangeTypeName>uima.cas.Long</rangeTypeName>
                        </featureDescription>
                    </features>
                </typeDescription>
            </types>
        </typeSystemDescription>
        <typePriorities/>
        <fsIndexCollection/>
        <capabilities>
            <capability>
                <inputs/>
                <outputs/>
                <languagesSupported/>
            </capability>
        </capabilities>
        <operationalProperties>
            <modifiesCas>true</modifiesCas>
            <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
            <outputsNewCASes>true</outputsNewCASes>
        </operationalProperties>
    </processingResourceMetaData>
    <resourceManagerConfiguration/>
</collectionReaderDescription>
